{% extends 'base_admin.html.twig' %}

{% block title %}Categorías
{% endblock %}
{% block javascripts %}
	<script src="/assets/js/validacion_index_categoria.js"></script>
	<script src="/assets/js/validacion_delete_categoria.js"></script>
{% endblock %}
{% block body %}
	<div class="container">
		<h1>Categorías</h1>
		<table class="table table-bordered">
			<thead>
				<tr align='center'>
					<th>Id</th>
					<th>Nombre</th>
					<th>URL</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
				{% set i = 1 %}
				{% for categorium in categorias %}
					<tr>
						<td align='center'>{{ i}}</td>
						<td>{{ categorium.nombre }}</td>
						<td>
							<a href='{{ categorium.directorio|replace({ (directorio) : url_final }) }}/index.php?idcategoria={{categorium.id}}' target='_blank'>{{ categorium.directorio|replace({ (directorio) : url_final  }) }}/index.php?id={{categorium.id}}</a>
						</td>

						<td align='center'>
							<a href="javascript:mostrar({{categorium.id}})" title='Ver detalles de la Categoria'>
								<i class='fas fa-glasses' style='font-size:22px; color:#14626f'></i>
							</a>
							<a href="{{ path('categoria_edit', {'id': categorium.id}) }}" title='Editar esta categoría'>
								<i class='far fa-edit' style='font-size:22px; color:#14626f'></i>
							</a>
							<a href="javascript:borrar({{categorium.id }})" title='Borrar esta Categoría'>
								<i class='fas fa-eraser' style='font-size:22px;color:red'></i>
							</a>
						</td>
					</tr>
					{% set i = i + 1 %}
				{% else %}
					<tr>
						<td colspan="3">No se han creado Categorías</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<div class="text-right">
			<a href="{{ path('app_categoria_new2') }}" title='Crear una nueva categoría'>
				<i class='fas fa-folder-open' style='font-size:22px ; color:#14626f'></i>
			</a>
		</div>
	</div>
{% endblock %}
