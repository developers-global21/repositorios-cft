{% extends 'base_admin.html.twig' %}

{% block title %}Categoria
{% endblock %}
{% block javascripts %}
	<script src="/assets/js/validacion_delete_categoria.js"></script>
{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-6 col-lg-6" style='margin:auto !important'>
				<div class="card">
					<div class="card-header">
						<h3>Categoria</h3>
					</div>
					<div class="card-body">

						<table class="table">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ categorium.id }}</td>
								</tr>
								<tr>
									<th>Nombre</th>
									<td>{{ categorium.nombre }}</td>
								</tr>
							</tbody>
						</table>
						<div class="col-12 col-md-12 col-lg-12 text-right">
							<a href="{{ path('app_categoria_index') }}" title='Regresar al listado'>
								<i class='fas fa-angle-double-left' style='font-size:22px; color:#14626f'></i>
							</a>
							<a href="{{ path('categoria_edit', {'id': categorium.id}) }}" title='Editar esta Categoría'>
								<i class='far fa-edit' style='font-size:22px; color:#14626f'></i>
							</a>
							<a href="javascript:borrar({{categorium.id }})" title='Borrar esta Categoría'>
								<i class='fas fa-eraser' style='font-size:22px;color:red'></i>
							</a>
						</div>
						<div class="col-12 col-md-12 col-lg-12 text-right"></div>
						<div class="col-12 col-md-12 col-lg-12 text-right"></div>
					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}
