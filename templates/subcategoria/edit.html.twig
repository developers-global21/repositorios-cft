{% extends 'base_admin.html.twig' %}

{% block title %}Edit Proceso
{% endblock %}
{% block javascripts %}
	<script src="/assets/js/validacion_edit_proceso.js"></script>
	<script src="/assets/js/validacion_delete_proceso.js"></script>
{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-6 col-lg-6" style='margin:auto !important'>
				<div class="card">
					<div class="card-header">
						<h3>Editar Proceso</h3>
					</div>
					<div class="card-body">
						<form id='f1' name='f1' method="POST">
							<div class="row">
								<div class="col-12 col-md-12 col-lg-12">
									<label for="nombre">Categoria</label>
									<select class="form-control" id="categoria" name="categoria">
										<option value="-99">Seleccione una categoria</option>
										{% for categoria in categorias %}
											{% if (categoria.id == subcategorium.categoria.id) %}
												<option value="{{ categoria.id }}" selected>{{ categoria.nombre }}</option>
											{% else %}
												<option value="{{ categoria.id }}">{{ categoria.nombre }}</option>
											{% endif %}
										{% endfor %}
									</select>
								</div>
							</div>
							<div class="row">
								<div class="col-12 col-md-12 col-lg-12">
									<label for="nombre">Nombre del Proceso</label>
									<input type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre del Proceso" required value='{{subcategorium.nombre}}'>
								</div>
							</div>
							<div class=" row">&nbsp;</div>
							<div class="row">
								<div class="col-12 col-md-12 col-lg-12 text-right">
									<input type='hidden' id='id' name='id' value='{{subcategorium.id}}'>
									<a href="{{ path('app_categoria_index') }}" title='Regresar al listado'>
										<i class='fas fa-angle-double-left' style='font-size:22px; color:#14626f'></i>
									</a>
									<a href="javascript:guardar()" title='Guardar los Cambios'>
										<i class='fas fa-database' style='font-size:22px; color:#14626f'></i>
									</a>
									<a href="javascript:borrar({{subcategorium.id }})" title='Borrar esta CategorÃ­a'>
										<i class='fas fa-eraser' style='font-size:22px;color:red'></i>
									</a>
								</div>
							</div>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
