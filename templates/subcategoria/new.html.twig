{% extends 'base_admin.html.twig' %}

{% block title %}Nuevo Proceso
{% endblock %}
{% block javascripts %}
	<script src="/assets/js/validacion_new_proceso.js"></script>
{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-6 col-lg-6" style='margin:auto !important'>
				<div class="card">
					<div class="card-header">
						<h3>Crear un nuevo Proceso</h3>
					</div>
					<div class="card-body">
						<form id='f1' name='f1' method="POST">
							<div class="row">
								<div class="col-12 col-md-12 col-lg-12">
									<label for="nombre">Categoria</label>
									<select class="form-control" id="categoria" name="categoria">
										<option value="-99">Seleccione una categoria</option>
										{% for categoria in categorias %}
											<option value="{{ categoria.id }}">{{ categoria.nombre }}</option>
										{% endfor %}
									</select>
								</div>
							</div>
							<div class="row">
								<div class="col-12 col-md-12 col-lg-12">
									<label for="nombre">Nombre</label>
									<input type="text" name="nombre" id="nombre" class="form-control" placeholder="Nombre del proceso" required>
								</div>
							</div>
							<div class="row">&nbsp;</div>
							<div class="row">
								<div class="col-12 col-md-12 col-lg-12 text-right">
									<a href="javascript:guardar()" title='Guardar'>
										<i class='fas fa-database' style='font-size:22px; color:#14626f'></i>
									</a>
								</div>
							</div>
						</form>

						<div class="col-12 col-md-12 col-lg-12 text-right">
							<a href="{{ path('app_subcategoria_index') }}">
								<i class='fas fa-angle-double-left' style='font-size:22px; color:#14626f'></i>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
