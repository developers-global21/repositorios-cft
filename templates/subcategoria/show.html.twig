{% extends 'base_admin.html.twig' %}

{% block title %}Proceso
{% endblock %}
{% block javascripts %}
	<script src="/assets/js/validacion_delete_proceso.js"></script>
{% endblock %}
{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-6 col-lg-6" style='margin:auto !important'>
				<div class="card">
					<div class="card-header">
						<h3>Proceso</h3>
					</div>
					<div class="card-body">

						<table class="table">
							<tbody>
								<tr>
									<th>Id</th>
									<td>{{ subcategorium.id }}</td>
								</tr>
								<tr>
									<th>Categoria a la que Pertenece</th>
									<td>{{ subcategorium.categoria }}</td>
								</tr>
								<tr>
									<th>Nombre del Proceso</th>
									<td>{{ subcategorium.nombre }}</td>
								</tr>
							</tbody>
						</table>
						<div class="col-12 col-md-12 col-lg-12 text-right">
							<a href="{{ path('app_subcategoria_index') }}" title='Regresar al listado'>
								<i class='fas fa-angle-double-left' style='font-size:22px; color:#14626f'></i>
							</a>
							<a href="{{ path('app_subcategoria_edit', {'id': subcategorium.id}) }}" title='Editar esta Proceso'>
								<i class='far fa-edit' style='font-size:22px; color:#14626f'></i>
							</a>
							<a href="javascript:borrar({{subcategorium.id }})" title='Borrar este Proceso'>
								<i class='fas fa-eraser' style='font-size:22px;color:red'></i>
							</a>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}
