{% extends 'base_dash.html.twig' %}

{% block title %}Bienvenido al sistema de registros del CFT
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<div class="col-12 col-md-12 col-lg-12" style='margin:auto !important'>
				<div class="card">
					<div class="card-header">
						<h3>Acceso a Registros por Categorias</h3>
					</div>
					<div class="card-body">
						<table class="table table-striped">
							<thead>
								<tr>
									<th>Categor√≠a</th>
								</tr>
							</thead>
							<tbody>
								{% for categorium in allCategorias %}
									<tr>
										<td>
											<a href='{{ categorium.directorio|replace({ (directorio) : urlFinal }) }}/index.php?idcategoria={{categorium.id}}' target='_blank'>{{ categorium.nombre }}</a>
										</td>

									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
